<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.irri.gqnc.fieldbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FieldbookApplication"
        android:icon="@drawable/ic_launcher_fieldbook"
        android:label="@string/titleApplication"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name=".FieldbookActivity"
            android:label="@string/titleFieldBookActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- About Fieldbook activity -->
        <activity
            android:name=".AboutFieldbookActivity"
            android:label="@string/titleAboutFieldBookActivity" >
        </activity>
        
        <activity
            android:name=".RetrieveFieldbookActivity"
            android:label="@string/titleRetrieveFieldbookActivity" >
        </activity>
        
        <activity 
            android:name=".RetrieveFieldbookFromSharesActivity" 
            android:label="@string/titleRetrieveFieldbookFromShares">
        </activity>
        
        <activity
            android:name=".Zxing"
            android:label="ZXing Test">
        </activity>
    </application>

</manifest>